<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label class="form-label" for="postTitle">Title</label>
    <input class="form-control" id="postTitle" type="text" name="postTitle">
  </div>
  <div class="form-group">
    <label class="form-label" for="postText">Post</label>
    <textarea name="postBody" id="postText" class="form-control" rows="8" cols="80"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer"); -%>
